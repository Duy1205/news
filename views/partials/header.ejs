		 <div class="container">
			<div class="row">
				<div class="col-md-3">
					<nav id="mainnav" class="mainnav">
						<ul class="menu">
							<li><a href="/"><i class="fas fa-home"></i></a></li>	
							</li>
							<li class="gn-mega-menu"><a href="">HOT</a>
								<div class="sub-menu">
									<div class="container">
									<div class="row">
									<div class="col-md-12">
										<div class="mega-item-wrap">
											<% if(listPost && listPost.length){ %>
												<% listPost.slice(0,6).forEach((item, index) => { %>
												 
												<div class="mega-item">
													<a href="/posts/info-post?postID=<%= item._id%>"><img style="max-width : 80px ; max-height: 80px; " src="/images/news/<%=item.avatar %>" width="80px" height="80px	" alt="avatar"></a>
													<h5><a href="/posts/info-post?postID=<%=item._id%>"><%=item.name%></a></h5>
												</div>
												<% }) %>
                            			<% }%>
										</div>
									</div>
									</div>
									</div>
								</div><!-- /.submenu -->
							</li>
						</ul><!-- /.menu -->
					</nav><!-- /nav -->
				</div><!-- /.col-md-9 -->
				<div class="col-md-7">
					<nav id="mainnav" class="mainnav">
						<ul class="menu">
							<li><a href=""><%=moment().format('LLLL');%></a></li>
							<% if(listTopic && listTopic.length){ %>
								<%listTopic.slice(0, 4).forEach(item => { %>
									<li>
										<a href="/topics/info-topic?topicID=<%=item._id%>"><%=item.name%></a>
									</li>	
								<% })%>
							<% }%>
						</ul><!-- /.menu -->
						
					</nav><!-- /nav -->
				</div>
