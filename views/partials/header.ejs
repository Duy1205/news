									<%listTopic.forEach(item => { %>
	
										<li><a href="/topics/info-topic?topicID=<%=item._id%>"><%=item.name%></a>
										</li>
									<% })%>
									</ul><!-- /.submenu -->
								<% }%>
							</li>

						</ul><!-- /.menu -->
						
					</nav><!-- /nav -->
