<%- include ('../partials2/sidebar') %>
<%- include ('../partials2/header') %>
         <style>
         .inputfile {
            width: 0.1px;
            height: 0.1px;
            opacity: 0;
            overflow: hidden;
            position: absolute;
            z-index: -1;
         }
         </style>
         <div id="content-page" class="content-page">
            <div class="container">
               <div class="row">
                  <div class="col-lg-12">
                     <div class="iq-card">
                        <div class="iq-card-header d-flex justify-content-between">
                           <div class="iq-header-title">
                              <h4 style="font-family: utm-avo">Chỉnh Sửa Thông Tin</h4>
                           </div>
                        </div>
                        <div class="iq-card-body">
                           <div class="acc-edit">
                              <form>
                                 <div class="form-group">
                                    <label for="uname">Tên Đầy Đủ</label>
                                    <input type="text" class="form-control" id="name"  name="name" value="<%= infoUser.fullname%>">
                                 </div>
                                 <form>
                                    <div class="form-group">
                                      <label for="exampleFormControlFile1">Ảnh Đại Diện</label>
                                      <input type="file" class="form-control-file" id="exampleFormControlFile1">
                                    </div>
                                  </form>
                                 <div class="form-group">
                                    <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
                                    <div class="form-group">
                                      <input type="text" readonly class="form-control" id="email" value="<%= infoUser.email%>">
                                    </div>
                                  </div>
                                 <div class="form-group">
                                    <label for="uname" class="col-sm-2 col-form-label">Mật Khẩu</label>
                                    <input type="text" readonly class="form-control" id="password"  name="password" value="<%= infoUser.password%>">
                                    <div class="form-group">
                                          <a href="/users/edit-password/<%= infoUser._id %> ">
                                             <button class="btn btn-success" id="btnUpdate" type='submit'>
                                             <i class="fa fa-check-square-o"></i>
                                             Đổi Mật Khẩu
                                             </button>
                                          </a>
                                    </div>
                                 </div>
                                 <button type="submit" _userID=<%= infoUser._id%> class="btn btn-primary btnSave">Lưu lại</button>
                                 <button type="reset" class="btn iq-bg-danger btnCancle"><a href="/">Hủy</a></button>
                              </form>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </div>
<%- include ('../partials2/footer') %>

<script>
   
   $(document).on('click', '.btnSave', function(e){
      e.preventDefault();
      let userID = $(this).attr('_userID');
      let fullname = $('#name').val().trim();
      let password = $('#password').val().trim();

      if(!fullname || !password){
         toastr.warning('Bạn cần phải nhập thêm nội dung','Nhập Thêm')
      }
      else{

      $.ajax({
         url: `/users/update-user/${userID}`,
         method: 'POST',
         data: { fullname, password},
         success: resp => {
            console.log({ resp })
            //console.log(resp.error);
            
            if(!resp.error){
            toastr.success('Sửa Thành Công','Thành Công')
            window.location.href= "/";
            // window.location.href="/dashboard"
            } else {
            toastr.error('Sửa Không Thành Công','Thất Bại')
            // alert("Đăng Nhập Không Thành Công")
            }
         },
         error: err => {
            console.log(err)
         }
      })
   }

   });

</script>
        